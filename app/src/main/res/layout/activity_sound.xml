<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/sv_stu_add"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#fff"
tools:context=".SoundActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#2196f3">

        <ImageView
            android:id="@+id/iv_sound_back"
            android:layout_width="65dp"
            android:layout_height="75dp"
            android:padding="7dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/roboto_regular"
            android:text="Звуки"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

    </RelativeLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="10dp"
        android:gravity="center"
        android:paddingTop="120dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_sound_level_0"
            android:layout_width="250dp"
            android:text="0"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:drawableStart="@drawable/ic_baseline_numbers_24"
            android:drawableTint="@color/white"
            android:theme="@style/AppTheme.MyButton1" />

        <Button
            android:id="@+id/btn_sound_level_1"
            android:layout_width="250dp"
            android:text="1"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:drawableStart="@drawable/ic_baseline_numbers_24"
            android:drawableTint="@color/white"
            android:theme="@style/AppTheme.MyButton1" />
        <Button
            android:id="@+id/btn_sound_level_2"
            android:layout_width="250dp"
            android:text="2"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:drawableStart="@drawable/ic_baseline_numbers_24"
            android:drawableTint="@color/white"
            android:theme="@style/AppTheme.MyButton1" />

        <Button
            android:id="@+id/btn_sound_level_3"
            android:layout_width="250dp"
            android:text="3"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:drawableStart="@drawable/ic_baseline_numbers_24"
            android:drawableTint="@color/white"
            android:theme="@style/AppTheme.MyButton1" />

        <Button
            android:id="@+id/btn_sound_level_4"
            android:layout_width="250dp"
            android:text="4"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:drawableStart="@drawable/ic_baseline_numbers_24"
            android:drawableTint="@color/white"
            android:theme="@style/AppTheme.MyButton1" />

        <Button
            android:id="@+id/btn_sound_level_5"
            android:layout_width="250dp"
            android:text="5"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:drawableStart="@drawable/ic_baseline_numbers_24"
            android:drawableTint="@color/white"
            android:theme="@style/AppTheme.MyButton1" />

        <Button
            android:id="@+id/btn_sound_level_6"
            android:layout_width="250dp"
            android:text="6"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:drawableStart="@drawable/ic_baseline_numbers_24"
            android:drawableTint="@color/white"
            android:theme="@style/AppTheme.MyButton1" />




    </LinearLayout>


</LinearLayout>
</ScrollView>




