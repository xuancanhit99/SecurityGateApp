<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/sv_stu_add"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        tools:context=".MainActivity3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#2196f3">

                <ImageView
                    android:id="@+id/iv_light_back"
                    android:layout_width="65dp"
                    android:layout_height="75dp"
                    android:padding="7dp"
                    android:src="@drawable/ic_baseline_arrow_back_ios_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Освещение"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            </RelativeLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:gravity="center"
                android:paddingTop="50dp"
                android:orientation="vertical">

                <Button
                    android:layout_width="250dp"
                    android:text="Гараж"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:drawableStart="@drawable/ic_baseline_keyboard_double_arrow_down_24"
                    android:drawableTint="@color/white"
                    android:theme="@style/AppTheme.MyButton2" />

                <Button
                    android:id="@+id/btn_light_level_1"
                    android:layout_width="250dp"
                    android:text="Вкл"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:drawableStart="@drawable/ic_baseline_numbers_24"
                    android:drawableTint="@color/white"
                    android:theme="@style/AppTheme.MyButton1" />
                <Button
                    android:id="@+id/btn_light_level_2"
                    android:layout_width="250dp"
                    android:text="Выкл"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:drawableStart="@drawable/ic_baseline_numbers_24"
                    android:drawableTint="@color/white"
                    android:theme="@style/AppTheme.MyButton1" />

                <Button
                    android:layout_marginTop="30dp"
                    android:id="@+id/btn_light_level_0"
                    android:layout_width="250dp"
                    android:text="Въездные ворота"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:drawableStart="@drawable/ic_baseline_door_sliding_24"
                    android:drawableTint="@color/white"
                    android:theme="@style/AppTheme.MyButton10" />

                <Button
                    android:layout_width="250dp"
                    android:text="Вкл"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:drawableStart="@drawable/ic_baseline_numbers_24"
                    android:drawableTint="@color/white"
                    android:theme="@style/AppTheme.MyButton1" />
                <Button
                    android:layout_width="250dp"
                    android:text="Выкл"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:drawableStart="@drawable/ic_baseline_numbers_24"
                    android:drawableTint="@color/white"
                    android:theme="@style/AppTheme.MyButton1" />

                <Button
                    android:layout_marginTop="30dp"

                    android:layout_width="250dp"
                    android:text="Дверь"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:drawableStart="@drawable/ic_baseline_sensor_door_24"
                    android:drawableTint="@color/white"
                    android:theme="@style/AppTheme.MyButton7" />

                <Button

                    android:layout_width="250dp"
                    android:text="Вкл"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:drawableStart="@drawable/ic_baseline_numbers_24"
                    android:drawableTint="@color/white"
                    android:theme="@style/AppTheme.MyButton1" />
                <Button
                    android:layout_width="250dp"
                    android:text="Выкл"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:drawableStart="@drawable/ic_baseline_numbers_24"
                    android:drawableTint="@color/white"
                    android:theme="@style/AppTheme.MyButton1" />




            </LinearLayout>


        </LinearLayout>
    </ScrollView>








